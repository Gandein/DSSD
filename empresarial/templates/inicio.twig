<canvas id="myChart" width="300" height="300"></canvas>
<script>


var ctx = document.getElementById('myChart');
ctx.height = 700;
ctx.width = 700;
var myChart = new Chart(ctx, {
  type: 'bar',
  data: {
      labels: ['Casos', 'Tareas', 'Procesos'],
      datasets: [{
          label: 'Cantidad de casos tareas y procesos',
          data: [{{casos}},{{tareas}},{{procesos}}],
          backgroundColor: [
              'rgba(255, 99, 132, 0.2)',
              'rgba(54, 162, 235, 0.2)',
              'rgba(255, 206, 86, 0.2)',
              'rgba(75, 192, 192, 0.2)',
              'rgba(153, 102, 255, 0.2)',
              'rgba(255, 159, 64, 0.2)'
          ],
          borderColor: [
              'rgba(255, 99, 132, 1)',
              'rgba(54, 162, 235, 1)',
              'rgba(255, 206, 86, 1)',
              'rgba(75, 192, 192, 1)',
              'rgba(153, 102, 255, 1)',
              'rgba(255, 159, 64, 1)'
